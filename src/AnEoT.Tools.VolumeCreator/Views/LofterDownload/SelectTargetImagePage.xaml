<Page
    x:Class="AnEoT.Tools.VolumeCreator.Views.LofterDownload.SelectTargetImagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AnEoT.Tools.VolumeCreator.Views.LofterDownload"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBox
            Margin="0,0,0,5"
            Header="页面 Uri"
            IsReadOnly="True"
            Text="{x:Bind data.PageUri}"
            TextWrapping="NoWrap" />
        <TextBox
            Header="Lofter Cookie"
            IsReadOnly="True"
            Text="{x:Bind data.LofterCookie}" />
    </StackPanel>
</Page>
